@using System.Collections
@model PassportValidationWeb.Models.MRZDataCaptureModel
<style>
    .dataentryarea {
        width: 100%;
        height: 100%;
        padding: 25px 25px 25px 25px;
        background-color: #f4a39f;
        border: 2px solid #000000;
    }

    .personicon {
        float: left;
        width: 200px;
        height: 200px;
    }

    .dataform {
        margin-left: 200px;
        padding: 10px 10px 10px 10px;
    }

    .formlabel {
        text-align: right;
        float: left;
        width: 30%;
        padding: 2px 5px 2px 0;
    }

    .formdata {
        margin-left: 32%;
        width: 40%;
        padding: 2px 5px 2px 0;
    }

    .formlabelfullwidth {
        text-align: right;
        float: left;
        width: 20%;
        padding: 2px 5px 2px 0;
    }

    .formdatafullwidth {
        text-align: left;
        margin-left: 22%;
        width: 78%;
        padding: 2px 5px 2px 0;
    }

        .formdatafullwidth input {
            max-width: 400px;
        }

    .texterror {
        color: #ff0000;
    }
</style>

@using (Html.BeginForm())
{
    <div class="dataentryarea">
        <div class="personicon"><img src="/images/personplaceholder.png" /></div>
        <div class="dataform">
            <div class="formlabel">Passport No</div>
            <div class="formdata">
                @Html.TextBoxFor(model => model.PassportNumber, new { MaxLength = 9, Size = "15" })
            </div>
            <div class="formdata">
                @Html.ValidationMessage("PassportNumber", "", new { @class = "texterror" })
            </div>
            <div class="formlabel">Nationality</div>
            <div class="formdata">
                @Html.TextBoxFor(model => model.Nationality, new { MaxLength = 3, Size = "10", Id = "datepicker" })
            </div>
            <div class="formdata">
                @Html.ValidationMessage("Nationality", "", new { @class = "texterror" })
            </div>

            <div class="formlabel">Date of Birth</div>
            <div class="formdata">
                @Html.TextBoxFor(model => model.DateOfBirth, new { MaxLength = 10, Size = "10", Placeholder = "DD/MM/YYYY", Id = "dateOfBirth" })
            </div>
            <div class="formdata">
                @Html.ValidationMessage("DateOfBirth", "", new { @class = "texterror" })
            </div>
            <div class="formlabel">Gender</div>
            <div class="formdata">
                @Html.DropDownListFor(model => model.Gender, Model.GenderItems)
            </div>
            <div class="formdata">
                @Html.ValidationMessage("Gender", "", new { @class = "texterror" })
            </div>

            <div class="formlabel">Date of Expiry</div>
            <div class="formdata">
                @Html.TextBoxFor(model => model.DateOfExpiry, new { MaxLength = 10, Size = "10", Placeholder = "DD/MM/YYYY", Id = "dateOfExpiry" })
            </div>
            <div class="formdata">
                @Html.ValidationMessage("DateOfExpiry", "", new { @class = "texterror" })
            </div>
            <div class="formlabel">Personal No</div>
            <div class="formdata">
                @Html.TextBoxFor(model => model.PersonalNumber, new { MaxLength = 14, Size = "20" })
            </div>
            <div class="formdata">
                @Html.ValidationMessage("PersonalNumber", "", new { @class = "texterror" })
            </div>

        </div>
        <div style="text-align: center; clear: both;">
            <div>
                <div class="formlabelfullwidth">MRZ (line 2)</div>
                <div class="formdatafullwidth">
                    @Html.TextBoxFor(model => model.MRZ, new { MaxLength = 44, Size = "60" })
                </div>
                <div class="formdata">
                    @Html.ValidationMessage("MRZ", "", new { @class = "texterror" })
                </div>
            </div>
            <div style="clear: both; padding-top: 20px;">
                <input type="submit" value="Validate" />
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $('#dateOfBirth').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "1900:2050"
        });
        $('#dateOfExpiry').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "1900:2050"
        });
    });
</script>
